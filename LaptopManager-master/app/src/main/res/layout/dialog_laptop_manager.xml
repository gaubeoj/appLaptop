<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Sá»­a Laptop"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="27sp"
        android:gravity="center"
        android:background="#ECDBCB"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/upload_Image_Laptop"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_Laptop"
                    android:layout_width="190dp"
                    android:layout_height="180dp"
                    android:src="@drawable/add_laptop_icon"/>

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInput_TenLaptop"
                    style="@style/TextInputLayoutOutlinedBoxBrown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:hint="@string/t_n_laptop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutOutlinedBoxBrown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:text="    "
                            android:textSize="20sp"
                            android:hint="@string/h_ng_laptop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/spinner_HangLaptop"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutOutlinedBoxBrown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:text="    "
                            android:textSize="20sp"
                            android:hint="@string/th_ng_s_kt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:id="@+id/spinner_TSKT"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInput_GiaTien"
                    android:layout_marginTop="30dp"
                    style="@style/TextInputLayoutOutlinedBoxBrown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:hint="@string/gi_ti_n"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInput_SoLuong"
                    android:layout_marginTop="30dp"
                    style="@style/TextInputLayoutOutlinedBoxBrown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:hint="@string/s_l_ng_nh_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_Laptop_Manager"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingStart="60dp"
                        android:paddingEnd="60dp"
                        android:textSize="25sp"
                        android:textColor="#4E352F"
                        android:text="@string/c_p_nh_t"
                        android:background="@drawable/shape_button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>